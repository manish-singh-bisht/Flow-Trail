{
  "name": "flow-trail",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "sdk",
    "shared",
    "internal/server"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev:server": "npm run dev --workspace=@flow-trail/server",
    "dev:sdk": "npm run dev --workspace=@flow-trail/sdk",
    "dev:shared": "npm run dev --workspace=@flow-trail/shared",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "prettier": "^3.7.4"
  }
}
